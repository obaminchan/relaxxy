<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">お店を登録する</h1>
        <%= form_for @post do |f| %>
          <div class="form-group">
            <%= f.label :image, "写真" %>
            <%= f.file_field :image%>
          </div>

          <div class=""form-group">
            <%= f.label :title, "タイトル" %>
            <%= f.text_field :title%>
          </div>

          <div class="form-group">
            <%= f.label :content, "お店の概要" %>
            <%= f.text_area :content, class: 'form-control' %>
          </div>

          <%= f.submit '登録', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>
