
<p><%= link_to "お店一覧へ戻る", posts_path %></p>

<div class="post-index-wrapper">
  <div class="container">
    <div class="row">
    <% @comments.each do |comment| %>
      <div class='star' data-rating=<%= comment.rating %>></div>
        <div class="col-md-4 col-md-offset-2">
          <div class="post-index-single">

            <h2 class="post-title">
              <%= comment.title %>
            </h2>
            <p class="post-text">
             <%= comment.content %>
            </p>
            <%= image_tag comment.image.url %>
            <%= hidden_field_tag :post_id, @post_id %>
            <%= link_to "編集", edit_comment_path(comment.id) %>
            <%= link_to comment_path(comment.id), method: :delete, :class => "btn btn-small" do %>
               削除
            <% end %>
          </div>
        </div>
     <% end %>
   </div>
  </div>
</div>



<script>
    $('.star').raty({
      path: '/assets/icons',
      readOnly: true,
      score: function() {
            return $(this).attr('data-rating');
    }
  });
</script>
